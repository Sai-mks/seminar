#############################css 
 .container {
    display: grid;
    height: 100vh;
    grid-template-areas:
      "nav nav nav nav"
      "sidebar main main main"
      "sidebar content1 content2 content3"
      "sidebar footer footer footer";
    grid-gap: 0.2rem;
    font-weight: 800;
    font-size: 12px;
    color: #000302;
  }
  nav {
    background: #049df6;
    grid-area: nav;
  }
  main {
    background: #fff984e6;
    grid-area: main; 
  }
  #sidebar {
    background: #049df6;
    grid-area: sidebar;  
  }
  #content1 {
    background: #f76e05;
    grid-area: content1;
  }
  #content2 {
    background: #e9de0c;
    grid-area: content2;  
  }
  #content3 {
    background: #e539c6;
    grid-area: content3;
  }
  footer {
    background: #50b1c4;
    grid-area: footer;    
    .container {
      grid-template-areas:
        "nav"
        "sidebar"
        "main"
        "content1"
        "content2"
        "content3"
        "footer";
    }
  }
  

  
